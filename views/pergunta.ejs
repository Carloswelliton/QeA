<%- include ('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
       <hr>
       <h1><%= pergunta.title%></h1>
       <p><%= pergunta.description%></p>
       <hr>
       <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="">reposta:</label>
            <textarea name="corpo" id="" placeholder="Digite sua resposta" class="form-control"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Reponder</button>
       </form>
       <hr>
       <h3>Reespostas</h3>
       <hr>
       <% respostas.forEach(resposta => { %>
        <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
       <% }) %>
    </div>


</body>
<%- include('partials/footer.ejs') %>
